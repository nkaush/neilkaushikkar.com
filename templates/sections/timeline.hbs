<!-- Timeline Section -->
<section class="content-section" id="timeline">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading mb-2">Experience</h2>
      </div>
    </div>
    <div class="container text-center mb-5">
      <p class="lead">A short summary of my work experience...</p>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <ul class="timeline">
          {{#each timeline_data}}
            {{#if this.inverted }}
              <li class="timeline-inverted"
            {{else}}
              <li
            {{/if}}
            {{#if @first}}
              style="margin-bottom:32px">
            {{else}}
              >
            {{/if}}
                <a href="{{ this.link }}" target="_blank" rel="noopener noreferrer">
                  <div class="timeline-image">
                    <img class="img-circle img-responsive" src="{{ this.image_path }}" alt="{{ this.company }}">
                  </div>
                </a>
                <div class="timeline-panel">
                  <div class="timeline-heading">
                    <h5>{{ this.start }} - {{ this.end }}</h5>
                    <h4 class="subheading">
                      <a href="{{ this.link }}" target="_blank" rel="noopener noreferrer">{{ this.company }}</a>
                      <br>{{ this.position }}
                    </h4>
                    <i>{{ this.location }}</i>
                  </div>
                  <div class="timeline-body">
                    {{#each this.description}}
                    <p class="lead">{{ this }}</p><br>
                    {{/each}}
                  </div>
                </div>
              </li>
            {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>